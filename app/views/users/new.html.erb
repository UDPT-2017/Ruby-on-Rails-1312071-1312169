<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <% if session[:errors].nil? && session[:signuperrors].any? %>
  <div id="error-explanation">
    <div class="alert alert-danger">
      <%= t ".form_contains" %>
      <%= pluralize session[:signuperrors].count, t(".error") %>
    </div>
    <ul>
      <% session[:signuperrors].each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirm, "Confirmation" %>
  <%= f.password_field :password_confirm, class: "form-control" %>

  <%= f.submit t(".btn_create"), class: "btn btn-primary" %>
<% end %>

  </div>
</div>
